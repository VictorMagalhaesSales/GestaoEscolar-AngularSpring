package com.escola.api.configoauth.security;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import com.escola.api.model.Aluno;
import com.escola.api.repository.AlunoRepository;

@Service
public class AppUserDetailsService implements UserDetailsService{
	
	@Autowired
	private AlunoRepository alunoRepository;

	@Override
	public UserDetails loadUserByUsername(String login) throws UsernameNotFoundException {
		Optional<Aluno> alunoOpt = this.alunoRepository.findByLogin(login);
		Aluno aluno = alunoOpt.orElseThrow(() -> new UsernameNotFoundException("Login e/ou senha incorreto(s)"));
	}

}
